<Window x:Class="Todolist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToDo List" Height="800" Width="800" ResizeMode="NoResize"
        Background="#FF1E1E2F">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Green"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Green"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="#FF2C2C3F" CornerRadius="5">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3A3A50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <TextBox x:Name="TaskBox" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                 Width="450" Height="40" FontSize="18" Text="Enter text here..."
                 Background="#FF2C2C3F" Foreground="White" BorderThickness="0" Padding="10"
                 VerticalContentAlignment="Center">
            <TextBox.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="2" BlurRadius="5" Opacity="0.5"/>
            </TextBox.Effect>
        </TextBox>
        <Button x:Name="AddTask" Content="Add Task" Width="120" Height="40"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="470,0,0,0"
                Click="AddTask_Click"/>
        <ListBox x:Name="ToDoList" Margin="0,0,0,80" FontSize="18" Background="Transparent" BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel LastChildFill="False">
                        <TextBlock Text="{Binding TaskName}" Width="500" VerticalAlignment="Center" Foreground="White"/>
                        <Button Content="Delete" Tag="{Binding}" Click="DeleteTask_Click" Width="80" Background="Red"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
